<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="5dip" >

        <TextView
            android:id="@+id/stdtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#777676"
            android:textColor="#ffffff"
            android:textSize="7pt" />

        <ImageView
            android:id="@+id/pre_img"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dip"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/pre_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dip"
            android:layout_toRightOf="@id/pre_img"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pre_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pre_location"
            android:layout_below="@id/pre_location"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/pre_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pre_name"
            android:layout_below="@id/pre_name"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>